#!/bin/bash -efu

cwd="${0%/*}"

cat >"$cwd/Makefile" <<EOF
include $PWD/.build/dest/usr/share/mkinitrd/mk/functions.mk

FEATURESDIR = $cwd
EOF

cat >>"$cwd/Makefile" <<'EOF'

$(call include-features-once,aaa)
$(call include-features-once,aaa)
$(call include-features-once,aaa)

all:
	@:
EOF

make --no-print-directory -C "$cwd"
rm -f -- "$cwd/Makefile"
